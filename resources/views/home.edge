<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Geo-IP Lookup</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-6 m-auto text-center">
          <h1 class="title mt-2">Geo-IP Lookup</h1>
          <p class="mt-4">Welcome to Geo-IP Lookup, all you need to do is input the IP Address in the below field to find the originating country!</p>
          @if(errors)
          <div class="alert alert-danger"><p class="text-danger">{{ errors }}</p></div>
          @endif
          <form name="ip-checker" method="POST">
            <fieldset>
              <input class="form-control col-2" type="text" name="ip-address" placeholder="Enter IP Address here" value="{{ ip }}" required>
              <input class="btn btn-primary btn-lg mt-4" type="submit" value="Search">
            </fieldset>
          </form>
        </div>

        @if(data)
        <div class="row">
          <div class="col-6 m-auto">
            <table class="table mt-4">
              <thead>
              <th></th>
              <th scope="col">Details</th>
              </thead>
              <tbody>
              <tr>
                <td>IP</td>
                <td>{{ data.ip }}</td>
              </tr>
              <tr>
                <td>City</td>
                <td>{{ data.city }}</td>
              </tr>
              <tr>
                <td>Country</td>
                <td>{{ data.country_name }}</td>
              </tr>
              <tr>
                <td>Country Capital</td>
                <td>{{ data.country_capital }}</td>
              </tr>
              <tr>
                <td>ISP</td>
                <td>{{ data.org }}</td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
        @endif
      </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
  </body>
</html>
